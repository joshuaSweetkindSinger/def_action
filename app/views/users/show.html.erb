<%provide(:title, @user.name)%>
<div class = "row">
  <aside class = "span4">
    <section>
      <h1>
        <%= gravatar_for @user, size: 100 %>
        <%= @user.name %>
      </h1>
      <p><%= @user.email %></p>
      <% if @user.admin? %>
        is an admin
      <% end %>
    </section>
    <%= render 'shared/stats' %>
  </aside>

  <div class = "span8">
    <%= render 'follow_or_unfollow' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3> Microposts Count <%= @user.microposts.count %> </h3>
      <ol class = "microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
