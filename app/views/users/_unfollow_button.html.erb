<%= form_tag(relationship_path(Relationship.where(followed_id: @user.id, follower_id: current_user.id).first.id),
             remote: true,
             method: :delete) do %>
  <div><%= hidden_field_tag :followed_id, @user.id %></div>
  <div><%= hidden_field_tag :follower_id, current_user.id %></div>
  <%= submit_tag 'Unfollow', class: 'btn btn-large btn-primary' %>
<% end %>