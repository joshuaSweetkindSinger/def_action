<% @user ||= current_user %>
<div class = "stats">
  <a href = "<%= users_being_followed_path(@user) %>">
    <strong id = "following" class = "stat">
      <%= @user.followed_users.count %>
    </strong>
    following
  </a>
  <a href = "<%= followers_path(@user) %>">
    <strong id = "followers" class = "stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>